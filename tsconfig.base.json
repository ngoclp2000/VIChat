{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@vichat/shared/*": ["packages/shared/src/*"],
      "@vichat/sdk": ["packages/sdk-web/src/index.ts"],
      "@vichat/sdk/*": ["packages/sdk-web/src/*"]
    }
  }
}
